{
  "name": "jotai-devtools",
  "version": "0.0.1",
  "description": "A powerful toolkit to enhance your development experience with Jotai",
  "author": {
    "name": "Arjun Vegda",
    "url": "https://arjunvegda.com"
  },
  "sideEffects": false,
  "source": "./src/index.ts",
  "main": "./dist/index.umd.js",
  "module": "./dist/index.modern.mjs",
  "unpkg": "./dist/index.umd.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "module": "./dist/index.modern.mjs",
      "import": "./dist/index.modern.mjs",
      "umd": "./dist/index.umd.js"
    },
    "./utils": {
      "types": "./dist/src/utils/index.d.ts",
      "module": "./dist/utils/index.modern.mjs",
      "import": "./dist/utils/index.modern.mjs",
      "umd": "./dist/utils/index.umd.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "jest",
    "test:watch": "yarn run test --watch",
    "test:coverage": "yarn run test --coverage",
    "test:ci": "yarn run test:coverage --maxWorkers=1",
    "commitlint": "commitlint",
    "lint-staged": "lint-staged",
    "bundle": "microbundle build -f modern,umd --compress --globals react=React --tsconfig tsconfig.build.json --generateTypes true",
    "compile": "run-s compile:index compile:utils",
    "precompile": "rimraf ./dist",
    "compile:index": "yarn run bundle",
    "compile:utils": "yarn run bundle src/utils/index.ts -o dist/utils/index.js --external jotai-devtools",
    "postcompile:utils": "cp -r dist/src/utils/. dist/utils"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jotai-labs/jotai-devtools.git"
  },
  "keywords": [
    "jotai",
    "devtools",
    "debugger",
    "react",
    "state",
    "management",
    "redux devtools"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jotai-labs/jotai-devtools/issues"
  },
  "homepage": "https://github.com/jotai-labs/jotai-devtools",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.0",
    "@commitlint/config-conventional": "^17.4.0",
    "@swc/core": "^1.3.25",
    "@swc/jest": "^0.2.24",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.2.5",
    "@types/node": "^18.11.18",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.48.0",
    "@typescript-eslint/parser": "^5.48.0",
    "eslint": "^8.31.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.0",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-watch-typeahead": "^2.2.1",
    "jotai": "^1.12.1",
    "lint-staged": "^13.1.0",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "redux": "^4.2.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.4"
  },
  "peerDependencies": {
    "jotai": ">=1.5.0 <2.x",
    "react": ">=16.8"
  },
  "dependencies": {
    "@redux-devtools/extension": "^3.2.3"
  }
}
